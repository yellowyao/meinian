<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.dao.TravelGroupDao">


    <resultMap id="findTravelGroupListBySetmealId" type="TravelGroup">
        <id column="id" property="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="helpCode" column="helpCode"/>
        <result property="sex" column="sex"/>
        <result property="remark" column="remark"/>
        <result property="attention" column="attention"/>
        <collection property="travelItems" column="id" select="com.atguigu.dao.TravelItemDao.findTravelItemListByTravelGroupId"/>
    </resultMap>

    <select id="findTravelGroupListBySetmealId" resultMap="findTravelGroupListBySetmealId" parameterType="integer">
        select t_travelgroup.*
        from t_travelgroup
                 left join t_setmeal_travelgroup on t_travelgroup.id = t_setmeal_travelgroup.travelgroup_id
        where t_setmeal_travelgroup.setmeal_id = #{id};
    </select>

    <insert id="add" parameterType="TravelGroup" keyProperty="id" useGeneratedKeys="true">
        insert into t_travelgroup(code, name, helpCode, sex, remark, attention) value ( #{code}, #{name}, #{helpCode}, #{sex}, #{remark}, #{attention})
    </insert>

    <insert id="setTravelGroupAndTravelItem" parameterType="Map">
        insert into t_travelgroup_travelitem(travelgroup_id, travelitem_id) value (#{travelGroupId},#{travelItemId})
    </insert>

    <select id="findPage" parameterType="String" resultType="TravelGroup">
        select *from t_travelgroup
        <where>
            <if test="value!=null and value.length>0">
                code=#{value} or name like concat('%',#{value},'%')
            </if>
        </where>
    </select>
    <select id="findById" parameterType="Integer" resultType="TravelGroup">
        select *
        from t_travelgroup
        where id = #{id}
    </select>
    <select id="findTravelItemIdByTravelGroupId" parameterType="Integer" resultType="Integer">
        select travelitem_id
        from t_travelgroup_travelitem
        where travelgroup_id = #{id}
    </select>
    <select id="findAll" resultType="com.atguigu.pojo.TravelGroup">
        select *
        from t_travelgroup
    </select>

    <delete id="deleteTravelItemIdByTravelGroupId" parameterType="Integer">
        delete
        from t_travelgroup_travelitem
        where travelgroup_id = #{id}
    </delete>
    <delete id="deleteById" parameterType="Integer">
        delete
        from t_travelgroup
        where id = #{id}
    </delete>


    <update id="edit" parameterType="travelGroup">
        update t_travelgroup
        <set>
            <if test="code!=null and code.length>0">
                code = #{code},
            </if>
            <if test="name!=null and name.length>0">
                name = #{name},
            </if>
            <if test="helpCode!=null and helpCode.length>0">
                helpCode = #{helpCode},
            </if>
            <if test="sex!=null and sex.length>0">
                sex = #{sex},
            </if>
            <if test="remark!=null and remark.length>0">
                remark = #{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention = #{attention},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>